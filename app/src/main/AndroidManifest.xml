<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mal.univised" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewUniversity"
            android:label="Univised"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mal.univised.MainActivity" />
        </activity>
        <activity
            android:name=".NewReview"
            android:label="Univised"
            android:parentActivityName=".NewReview" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mal.univised.NewReview" />
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="Univised"
            android:parentActivityName=".SearchActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mal.univised.SearchActivity" />
        </activity>
    </application>

</manifest>
